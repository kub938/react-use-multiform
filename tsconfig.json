{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "ES2019"],
    "jsx": "react-jsx",
    "types": ["vitest/globals"],

    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",

    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite-env.d.ts"]
}
